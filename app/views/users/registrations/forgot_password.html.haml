!!!
%html
  %head
    /
      * @Package: Crest Admin - Responsive Theme
      * @Subpackage: Bootstrap
      * @Version: 1.0
      * This file is part of Crest Admin Theme.
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:charset => "utf-8"}/
    %title Crest Admin : Login Page
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/

  %body.login_page
    .container-fluid
      .login-wrapper.row
        #login.login.loginpage.col-lg-offset-4.col-md-offset-3.col-sm-offset-3.col-xs-offset-0.col-xs-12.col-sm-6.col-lg-4{style: "margin-top: 159px;"}
          %h1.text-center{style: 'color: white;'}
            / PIN
            / %sup{style: "left: -0.3em;margin-right: -0.5em;"}3
            SindyCUBEs
          = form_tag(users_sign_in_path, id: "form-forgot", method: :post, novalidation: false, autocomplete: 'off') do
            .alert.alert-primary.alert-dismissible.fade.in{style: "padding: 15px;"}
              %strong Please enter your email address to send a link to reset your password.

            .form-group{style: "margin-bottom: 0;"}
              = email_field_tag :email, nil, placeholder: "Email", required: true
            %p.submit
              =button_tag "Search", name: "wp-submit", id: 'wp-submit', class: "btn btn-accent btn-block btn-sign-in"
            %p#nav
              .clearfix
              %a.pull-left{:href => users_sign_in_path, :title => "Password Lost and Found"} Sign In
              %a.pull-right{:href => root_path, :title => "Sign Up"} Sign Up